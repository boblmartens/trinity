<fieldset id="login">
  <legend>Sign in to access this site's features.</legend>
  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>

    <%= f.label :email %>
    <%= f.text_field :email %><br />
    <br />
    <%= f.label :password %>
    <%= f.password_field :password %><br />
    <br />
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br /> 
    <br />
    <%= f.submit "Login" %>
  <% end %>
</fieldset>
